<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/brown2"
        android:text="@string/grocery_menu"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/none"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/share_ingredient"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:elevation="10dp"
        android:src="@drawable/send"
        android:background="@drawable/add_meal_button_state"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDairy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dairy"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dairy_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtVegetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vegetable"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vegetable_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtProtein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protein"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/protein_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtGrain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grain"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/grain_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtOil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oil"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/oil_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtSpice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spice"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/spice_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stock"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stock_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtSweetener"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sweetener"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sweetener_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtCondiment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Condiment"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/condiment_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtHerb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Herb"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/herb_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtNut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nut"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nut_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtFruit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fruit"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fruit_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txtLiquid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Liquid"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/liquid_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txtBeverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beverage"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/beverage_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txtOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/other_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>